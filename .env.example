# Основные параметры приложения
DEV_MODE=true
LOG_LEVEL=INFO
ALLOWED_HOSTS=*

# PostgreSQL
DATABASE_DSN=postgresql+asyncpg://postgres:postgres@postgres:5432/georag
DATABASE_ECHO=false

# S3-совместимое хранилище
S3_BUCKET=geo-images
S3_ENDPOINT_URL=http://minio:9000
S3_REGION=ru-central1
S3_ACCESS_KEY=localstack
S3_SECRET_KEY=localstack
S3_USE_SSL=false
S3_IMAGES_PREFIX=images
S3_FEATURES_PREFIX=features/local
S3_GLOBAL_PREFIX=features/global

# Настройки извлечения признаков
FEATURE_MAX_KEYPOINTS=4096
LOCAL_FEATURE_TYPE=superpoint_max
GLOBAL_DESCRIPTOR_TYPE=netvlad
MATCHER_TYPE=lightglue
RETRIEVAL_CANDIDATES=32
GLOBAL_SCORE_WEIGHT=0.35
LOCAL_SCORE_WEIGHT=0.65
GEOMETRY_SCORE_WEIGHT=0.25
MAX_SEARCH_RESULTS=50
PREFER_GPU=false

# Nominatim
NOMINATIM_USER_AGENT=GeoRAG/1.0 (+https://example.com)
NOMINATIM_TIMEOUT=5

# Источники данных
MAPILLARY_TOKEN=your_mapillary_access_token
